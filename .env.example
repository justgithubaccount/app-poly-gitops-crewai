# Core
DEFAULT_NAMESPACE=default
ALLOW_MUTATING=false
KUBECONFIG=~/.kube/config
KUBECTL_TIMEOUT=20

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# OpenTelemetry
OTEL_SERVICE_NAME=auto-k8s-pilot
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
ENVIRONMENT=development
APP_VERSION=0.1.0

# Kubernetes metadata (set by downward API in K8s)
# K8S_POD_NAME=
# K8S_NAMESPACE=
# K8S_NODE_NAME=
# K8S_DEPLOYMENT_NAME=auto-k8s-pilot
# K8S_CONTAINER_NAME=auto-k8s-pilot
# K8S_POD_UID=

# Grafana (optional)
# GRAFANA_TENANT_ID=

# Logging
LOG_LEVEL=INFO

# Flow
DEFAULT_FLOW=k8s-healthcheck

# ArgoCD
# ARGOCD_BASE_URL=https://argocd.example.com
# ARGOCD_API_TOKEN=

# Loki
LOKI_URL=http://loki:3100

# GitHub
# GITHUB_TOKEN=

# Cloudflare
# CLOUDFLARE_API_TOKEN=
# CLOUDFLARE_ZONE_ID=

# OpenRouter (LLM Gateway)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# OPENROUTER_API_KEY=
# OPENROUTER_SITE_URL=
# OPENROUTER_APP_NAME=

# MCP Kubernetes server
# MCP_K8S_SERVER_URL=ws://localhost:8765
# MCP_K8S_API_KEY=
MCP_K8S_INSECURE=false
